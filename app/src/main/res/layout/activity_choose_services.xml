<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chooseServices">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#df4526"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:textColor="#000000">

        <TextView
            android:id="@+id/servicesOffererd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Offered Services:"
            android:textSize="24sp" />

        <ListView
            android:id="@+id/services_Offered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/servicesChosen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Services:"
            android:textSize="24sp" />

        <ListView
            android:id="@+id/services_Chosen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/services_doneButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Close" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>